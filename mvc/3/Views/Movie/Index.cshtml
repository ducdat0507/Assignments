@using System.Collections
@model IEnumerable<MovieModel>
@{
    ViewData["Title"] = "All Movies";
}

<div class="text-center">
    <h1 class="display-4 mb-4">All Movies</h1>
    
    <div class="row g-2">
        @foreach (MovieModel movie in Model) {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <a class="card" asp-controller="Movie" asp-action="Index" asp-route-id="@movie.Id">
                    <img class="card-img-top" src="/images/movies/@(movie.Id).png" />
                    <div class="card-body">
                        <h5 class="card-title">@movie.Name</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
